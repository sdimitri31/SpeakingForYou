<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="layoutPopupMore">@style/layout_popup_more</item>
        <item name="layoutEditText">@style/layout_edit_text</item>
        <item name="layoutCell">@style/layout_cell</item>
        <item name="layoutCellRipple">@style/layout_cell_ripple</item>

        <item name="imageButton">@style/image_button</item>
        <item name="imageButtonOverBackground">@style/image_button_over_background</item>

        <item name="editTextImageButton">@style/image_button_edit_text</item>

        <item name="colorTransparent">@color/transparent</item>

        <item name="colorStarDisabled">@color/star_disabled</item>
        <item name="colorStarEnabled">@color/star_enabled</item>
    </style>


    <style name="Theme.Custom_Light" parent="Theme.Base">
        <!-- STATUS BAR -->
        <item name="android:statusBarColor">@color/light_colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- STYLES -->
        <item name="backgroundPrimary">@style/background_primary_wh</item>
        <item name="backgroundPrimaryDark">@style/background_primary_dark_wh</item>
        <item name="backgroundAccent">@style/background_accent_wh</item>

        <item name="editText">@style/edit_text_wh</item>
        <item name="button">@style/button_wh</item>
        <item name="textNormal">@style/text_normal_wh</item>
        <item name="textSettingTitle">@style/text_setting_title_wh</item>
        <item name="textSettingSub">@style/text_setting_sub_wh</item>

        <!-- COLORS -->
        <item name="colorAccent">@color/light_colorAccent</item>
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="colorPrimaryText">@color/light_colorPrimaryText</item>
        <item name="colorSecondaryText">@color/light_colorSecondaryText</item>
        <item name="colorRipple">@color/light_colorRipple</item>

        <item name="themeModeIcon">@drawable/ic_moon</item>
    </style>

    <style name="Theme.Custom_Dark" parent="Theme.Base">
        <!-- STATUS BAR -->
        <item name="android:statusBarColor">@color/dark_colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- STYLES -->
        <item name="backgroundPrimary">@style/background_primary_dark</item>
        <item name="backgroundPrimaryDark">@style/background_primary_dark_dark</item>
        <item name="backgroundAccent">@style/background_accent_dark</item>

        <item name="editText">@style/edit_text_dark</item>
        <item name="button">@style/button_dark</item>
        <item name="textNormal">@style/text_normal_dark</item>
        <item name="textSettingTitle">@style/text_setting_title_dark</item>
        <item name="textSettingSub">@style/text_setting_sub_dark</item>

        <!-- COLORS -->
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorPrimaryText">@color/dark_colorPrimaryText</item>
        <item name="colorSecondaryText">@color/dark_colorSecondaryText</item>
        <item name="colorRipple">@color/dark_colorRipple</item>

        <item name="themeModeIcon">@drawable/ic_sun</item>
    </style>

</resources>