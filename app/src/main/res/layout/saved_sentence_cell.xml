<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <CheckBox
        android:id="@+id/checkBox_SavedSentenceCell_SelectItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:buttonTint="?colorAccent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout_SavedSentenceCell"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout_SavedSentenceCell"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout_SavedSentenceCell" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout_SavedSentenceCell"
        style="?layoutCellRipple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="2"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkBox_SavedSentenceCell_SelectItem"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_SavedSentenceCell_Sentence"
            style="?textNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sentence" />


    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
