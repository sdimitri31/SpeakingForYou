<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <CheckBox
        android:id="@+id/checkBox_HistoryCell_SelectItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:buttonTint="?colorAccent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout_HistoryCell"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout_HistoryCell"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout_HistoryCell" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout_HistoryCell"
        style="?layoutCellRipple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="23"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkBox_HistoryCell_SelectItem"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton_HistoryCell_More"
            style="?imageButton"
            android:layout_width="32dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:scaleType="centerInside"
            android:tint="?colorAccent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_more" />

        <LinearLayout
            android:id="@+id/linearLayout_HistoryCell_PopUp"
            style="?layoutPopupMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:elevation="5dp"
            android:orientation="horizontal"
            android:padding="4dp"
            android:translationZ="5dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/imageButton_HistoryCell_More"
            app:layout_constraintEnd_toStartOf="@id/imageButton_HistoryCell_More"
            app:layout_constraintTop_toTopOf="@id/imageButton_HistoryCell_More">

            <ImageButton
                android:id="@+id/imageButton_HistoryCell_AddToSaved"
                style="?imageButton"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@android:drawable/btn_star" />

            <ImageButton
                android:id="@+id/imageButton_HistoryCell_Delete"
                style="?imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:stateListAnimator="@null"
                app:srcCompat="@android:drawable/ic_menu_delete" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_HistoryCell_Sentence"
            style="?textNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textView_HistoryCell_Usage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sentence" />

        <TextView
            android:id="@+id/textView_HistoryCell_DateFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chronological"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/textView_HistoryCell_Usage"
            app:layout_constraintStart_toStartOf="@+id/textView_HistoryCell_Sentence"
            app:layout_constraintTop_toBottomOf="@+id/textView_HistoryCell_Sentence" />

        <TextView
            android:id="@+id/textView_HistoryCell_Usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:elevation="1dp"
            android:text="@string/usage"
            android:textAppearance="?textSettingSub"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_HistoryCell_Sentence"
            app:layout_constraintEnd_toStartOf="@+id/imageButton_HistoryCell_More"
            app:layout_constraintStart_toEndOf="@id/textView_HistoryCell_Sentence"
            app:layout_constraintTop_toTopOf="@+id/textView_HistoryCell_Sentence" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView_HistoryCell_Star"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:elevation="5dp"
        android:scaleType="centerInside"
        android:tint="?colorStarEnabled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_star" />
</android.support.constraint.ConstraintLayout>
